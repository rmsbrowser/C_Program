	-rm $(QODEM_EXE) core $(QODEM_OBJS) $(QODEM_SRC_DIR)/config.h

qodem: $(QODEM_EXE)

$(QODEM_EXE): $(QODEM_BIN_DIR) $(QODEM_OBJS_DIR) $(QODEM_OBJS) $(EXTRA_LIBS)
	$(CC) $(LDFLAGS) -o $(QODEM_EXE) $(QODEM_OBJS) $(LDLIBS)

$(QODEM_OBJS_DIR)/%.o : $(QODEM_SRC_DIR)/%.c
	$(CC) $(CFLAGS) -o $@ -c $<

